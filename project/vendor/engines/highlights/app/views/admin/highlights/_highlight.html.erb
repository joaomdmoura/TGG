<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(highlight) -%>">
  <span class='title'>
    <%= highlight.color %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), highlight_path(highlight),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_highlight_path(highlight),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_highlight_path(highlight),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => highlight.color),
        :method => :delete %>
  </span>
</li>
