<% content_for :body_content_title do %>
  <%= @highlight.color %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Article</h1>
    <p>
      <%=raw @highlight.article_id %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @highlight.category_id %>
    </p>
  </section>
  <section>
    <h1>Color</h1>
    <p>
      <%=raw @highlight.color %>
    </p>
  </section>
  <section>
    <h1>Alignment</h1>
    <p>
      <%=raw @highlight.alignment %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="highlights">
      <% @highlights.each do |highlight| %>
        <li>
          <%= link_to highlight.color, highlight_path(highlight) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
