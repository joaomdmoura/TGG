<ul>
  <% if Admin::ArticlesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_articles_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_article_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ArticlesController.sortable? and Article.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Articles"),
                 admin_articles_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Articles"),
                 admin_articles_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>